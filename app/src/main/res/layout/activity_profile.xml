<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >

    <ImageView
        android:id="@+id/IVlogo_profile"
        android:layout_width="169dp"
        android:layout_height="185dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/starpify_logo" />

    <TextView
        android:id="@+id/TVappName_profile"
        android:layout_width="188dp"
        android:layout_height="120dp"
        android:layout_marginStart="157dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="@+id/IVlogo_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <ImageView
        android:id="@+id/IVprofile_photo"
        android:layout_width="288dp"
        android:layout_height="261dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVlogo_profile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profilephoto" />


    <TextView
        android:id="@+id/TVname_profile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVlogo_profile"
        app:layout_constraintVertical_bias="0.457" />

    <TextView
        android:id="@+id/TVshow_profile_name"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginBottom="344dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/TVname_profile_label" />

    <TextView
        android:id="@+id/TVlastname_profile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVlogo_profile"
        app:layout_constraintVertical_bias="0.570" />

    <TextView
        android:id="@+id/TVshow_profile_lastname"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginBottom="280dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/TVname_profile_label" />

    <TextView
        android:id="@+id/TVemail_profile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVlogo_profile"
        app:layout_constraintVertical_bias="0.665" />

    <TextView
        android:id="@+id/TVshow_profile_email"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginBottom="216dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/TVname_profile_label" />

    <TextView
        android:id="@+id/TVtel_profile_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TelÃ©fono"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVlogo_profile"
        app:layout_constraintVertical_bias="0.758" />

    <TextView
        android:id="@+id/TVshow_profile_tel"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginBottom="152dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/TVname_profile_label" />

    <Button
        android:id="@+id/BTeditinfo_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_info_user"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/abyssinica_sil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVshow_profile_tel" />


</androidx.constraintlayout.widget.ConstraintLayout>